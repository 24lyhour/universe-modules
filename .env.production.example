# ===========================================
# RAILWAY PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy these to Railway's environment variables
# Variables marked with [RAILWAY] are auto-injected

# ----- APPLICATION -----
APP_NAME=Universe
APP_ENV=production
APP_KEY=                          # Generate: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://uninversal-global.online

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ----- DATABASE (MySQL) -----
# [RAILWAY] These are auto-injected when you add MySQL service
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}              # [RAILWAY] Auto-injected
DB_PORT=${MYSQLPORT}              # [RAILWAY] Auto-injected
DB_DATABASE=${MYSQLDATABASE}      # [RAILWAY] Auto-injected
DB_USERNAME=${MYSQLUSER}          # [RAILWAY] Auto-injected
DB_PASSWORD=${MYSQLPASSWORD}      # [RAILWAY] Auto-injected

# ----- LOGGING -----
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# ----- SESSION & CACHE -----
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database

# ----- FILESYSTEM -----
FILESYSTEM_DISK=public

# ----- SECURITY -----
BCRYPT_ROUNDS=12

# ----- MAIL -----
# Configure for production (example: Mailgun, Resend, SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@uninversal-global.online"
MAIL_FROM_NAME="${APP_NAME}"

# ----- VITE -----
VITE_APP_NAME="${APP_NAME}"

# ----- OPTIONAL: PUSHER (Real-time) -----
